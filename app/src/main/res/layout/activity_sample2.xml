<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:orientation="vertical"
    	android:layout_alignParentTop="true">
	    <RelativeLayout
	        android:id="@+id/sample2_main_area" 
			android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="0.8"     
	        android:background="#e0e0e0"
	        android:layout_alignParentTop="true">
	        
	         <LinearLayout
	            android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="#e0e0e0"
		        android:orientation="horizontal">
		        <com.playrtc.sample.view.SlideLogView 
		            android:id="@+id/sample2_logview"
		            android:layout_width="0px"
	            	android:layout_height="match_parent"
	            	android:layout_weight="0.75" 
		            android:scrollbars="vertical"
		            android:layout_alignParentLeft="true"
		            android:textSize="13sp"
		            android:textColor="#000000"
		            android:text=""
		            android:background="@drawable/log_border" 
		            android:visibility="visible"/>
		         <LinearLayout
		            android:layout_width="0px"
	            	android:layout_height="match_parent"
	            	android:layout_weight="0.25" 
		            android:orientation="vertical">
		            
		            <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="20dp"
				        android:textColor="#000000"
				        android:text="@string/mute_voice_local" /> 
				    <Button
						android:id="@+id/btn_sample2_mute_alocal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:textSize="14sp"
						android:text="OFF" />    
		            
		            <TextView
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dp"
				        android:textColor="#000000"
				        android:text="@string/mute_voice_remote" /> 
				        
		           	<Button
						android:id="@+id/btn_sample2_mute_aremote"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:textSize="14sp"
						android:text="OFF" />    
				  
				        
		         </LinearLayout>
			</LinearLayout>
		</RelativeLayout>
		
		<RelativeLayout 
		    android:id="@+id/sample2_controls"
			android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="0.2"
	        android:layout_below="@id/sample2_main_area"
	        android:background="#ffffff">
		    
		   <Button
				android:id="@+id/btn_sample2_log"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="20dp"
				android:textSize="14sp"
				android:text="로그보기" />
		    
		   <Button
				android:id="@+id/btn_sample2_command"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@id/btn_sample2_log"
				android:layout_marginRight="50dp"
				android:textSize="14sp"
				android:text="Command" />
		   
			<Button
				android:id="@+id/btn_sample2_channel"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:textSize="14sp"
				android:text="채널팝업" />
			
			<Button
				android:id="@+id/btn_sample2_disconnect"
				android:layout_width="120dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="20dp"
				android:textSize="14sp"
				android:text="나가기" />

		</RelativeLayout>
	</LinearLayout>
	
	<include layout="@layout/channel_popup" 
	    android:id="@+id/sample2_channel_info"
    	android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
	    android:visibility="invisible" />	

</RelativeLayout>
